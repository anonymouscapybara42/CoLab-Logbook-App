{
  "expo": {
    "name": "Co-Lab Logbook",
    "slug": "colab-logbook-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "colablogbook",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.colab.logbook"
    },

    "android": {
      "package": "com.colab.logbook",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#2563eb"
      },
      "permissions": ["INTERNET"]
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },

    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2563eb"
        }
      ]
    ],

    "extra": {
      "eas": {
        "projectId": "afcc0894-7002-4d26-a9ce-a2bf99a55b64"
      }
    }
  }
}
